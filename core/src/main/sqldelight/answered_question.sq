CREATE TABLE AnsweredQuestion (
    id INTEGER PRIMARY KEY,
    questionId INTEGER,
    attempts INTEGER,
    correctAttempts INTEGER,
    FOREIGN KEY (questionId) REFERENCES Question(id) ON DELETE CASCADE
);

selectAll:
SELECT *
FROM AnsweredQuestion;

selectByQuestionId:
SELECT *
FROM AnsweredQuestion
WHERE questionId = ?;

selectWrong:
SELECT *
FROM AnsweredQuestion
WHERE attempts > 0
AND correctAttempts = 0;

selectNew:
SELECT *
FROM AnsweredQuestion
WHERE attempts = 0;
